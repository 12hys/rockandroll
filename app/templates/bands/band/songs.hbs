<div class="row">
	<div class="list-group songs">
		{{#if songCreationStarted}}
			<div class="list-group-item">
				{{input type="text" class="new-song" placeholder="New song" value=title}}
				<button class="btn btn-primary btn-sm new-song-button"
					disabled={{isAddButtonDisabled}}
					{{action "createSong"}}>Add</button>
			</div>
		{{/if}}
		<li class="list-group-item">
			{{input type="text" class="new-band" placeholder="New song" value=title}}
			<button class="btn btn-primary btn-sm new-song-button" {{action "createSong"}} disabled={{isAddButtonDisabled}}>Add</button>
		</li>
		{{#each model as |song|}}
		<li class="list-group-item">
			{{song.title}}
			{{star-rating item=song rating=song.rating setAction="updateRating"}}
		</li>
		{{/each}}
		{{#if noSongs}}
			<div class="list-group-item empty-list">
				<div class="empty-message">
					There are no songs yet. Why don't you <a href="#" {{action "enableSongCreation"}}>create one?</a>
				</div>
			</div>
		{{/if}}
	</div>
</div>